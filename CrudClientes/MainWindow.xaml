<Window x:Class="CrudClientes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRUD Clientes" Height="640" Width="1060" WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    <Window.Resources>
        <!-- Estilos básicos -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="110"/>
        </Style>
        <SolidColorBrush x:Key="Accent" Color="#2563EB"/>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Encabezado -->
        <Border DockPanel.Dock="Top" Background="#111827" Padding="14">
            <TextBlock Text="Gestión de clientes" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
        </Border>

        <!-- Pie/estado -->
        <StatusBar DockPanel.Dock="Bottom" Background="#F3F4F6">
            <StatusBarItem>
                <TextBlock x:Name="txtEstado" Text="Listo" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="pb" Visibility="Collapsed" IsIndeterminate="True" Width="120" Height="14"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Cuerpo -->
        <Grid Margin="14">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Fila 1 -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="IdCliente:"/>
                <TextBox Grid.Column="1" x:Name="txtId" MaxLength="5" ToolTip="Código de 5 caracteres" />
                <Label Grid.Column="2" Content="NombreCompania:"/>
                <TextBox Grid.Column="3" x:Name="txtCompania" MaxLength="100"/>
                <Label Grid.Column="4" Content="NombreContacto:"/>
                <TextBox Grid.Column="5" x:Name="txtContacto" MaxLength="100"/>
            </Grid>

            <!-- Fila 2 -->
            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="260"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="CargoContacto:"/>
                <TextBox Grid.Column="1" x:Name="txtCargo" MaxLength="100"/>
                <Label Grid.Column="2" Content="Direccion:"/>
                <TextBox Grid.Column="3" x:Name="txtDireccion" MaxLength="100"/>
                <Label Grid.Column="4" Content="Ciudad:"/>
                <TextBox Grid.Column="5" x:Name="txtCiudad" MaxLength="100"/>
            </Grid>

            <!-- Fila 3 -->
            <Grid Grid.Row="2" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Region:"/>
                <TextBox Grid.Column="1" x:Name="txtRegion" MaxLength="100"/>
                <Label Grid.Column="2" Content="CodPostal:"/>
                <TextBox Grid.Column="3" x:Name="txtPostal" MaxLength="100"/>
                <Label Grid.Column="4" Content="Pais:"/>
                <TextBox Grid.Column="5" x:Name="txtPais" MaxLength="100"/>
                <Label Grid.Column="6" Content="Telefono:"/>
                <TextBox Grid.Column="7" x:Name="txtTelefono" MaxLength="30"/>
            </Grid>

            <!-- Fila 4 -->
            <Grid Grid.Row="3" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Fax:"/>
                <TextBox Grid.Column="1" x:Name="txtFax" MaxLength="30"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Insertar" Click="BtnInsertar_Click" Background="{StaticResource Accent}" Foreground="White"/>
                    <Button Content="Listar" Click="BtnBuscar_Click"/>
                    <Button Content="Actualizar" Click="BtnActualizar_Click"/>
                    <Button Content="Eliminar" Click="BtnEliminar_Click" Background="#DC2626" Foreground="White"/>
                    <Button Content="Limpiar" Click="BtnLimpiar_Click"/>

                </StackPanel>
            </Grid>

            <!-- Grilla -->
            <DataGrid Grid.Row="4" x:Name="dgResultado"
                AutoGenerateColumns="True" IsReadOnly="True"
                AlternatingRowBackground="#F9FAFB" GridLinesVisibility="Horizontal"
                HeadersVisibility="Column" CanUserAddRows="False"
                RowHeaderWidth="0"/>
        </Grid>
    </DockPanel>
</Window>
